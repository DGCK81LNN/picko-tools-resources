root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{vbs,bat,ini,txt}]
indent_style = tab
indent_size = 4
end_of_line = crlf

[*.txt]
indent_size = 8
insert_final_newline = false

[*.md]
indent_size = 4
